<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/header" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/member_info" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/apply_success"
        android:textColor="@color/order_green"
        android:textSize="20dp" />

    <TextView
        style="@style/TextGrayStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/apply_tip1" />

    <TextView
        style="@style/TextGrayStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/apply_tip2" />

    <TextView
        style="@style/TextGrayStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/apply_tip3" />

    <TextView
        style="@style/TextGrayStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/apply_tip4" />

    <Button
        android:id="@+id/go_record_list"
        style="@style/ButtonStyleStrokeBlue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_margin="20dp"
        android:text="@string/see_apply_record" />

</LinearLayout>