<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/null_grid_bg"
        android:layout_width="@dimen/actionbar_heigh"
        android:layout_height="@dimen/actionbar_heigh"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            style="@style/SmallGrayTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/booked_grid_bg"
        android:layout_width="@dimen/actionbar_heigh"
        android:layout_height="@dimen/actionbar_heigh"
        android:layout_gravity="center"
        android:background="@drawable/solid_orange_rectangle1"
        android:orientation="vertical"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/name_new"
                style="@style/SmallGrayTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center" />

            <ImageView
                android:id="@+id/succ_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="1dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/class_check" />

        </FrameLayout>

    </LinearLayout>
</LinearLayout>