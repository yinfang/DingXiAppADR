<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <include layout="@layout/header" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/white"
        app:tl_iconVisible="false"
        app:tl_indicator_bounce_enable="false"
        app:tl_indicator_color="@color/tab_active"
        app:tl_indicator_height="1dp"
        app:tl_textSelectColor="@color/tab_active"
        app:tl_textUnselectColor="#282828"
        app:tl_textsize="15sp"
        app:tl_underline_color="#DDDDDD"
        app:tl_underline_height="1dp">

    </com.flyco.tablayout.CommonTabLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/bg_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_heigh"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/actionbar_heigh"
            android:layout_height="@dimen/actionbar_heigh"
            android:background="@color/grid_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/calender" />

            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018"
                android:textColor="@color/blue_translucent" />
        </LinearLayout>

        <GridView
            android:id="@+id/date_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grid_bg"
            android:numColumns="7"
            android:scrollbars="none" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_db" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.clubank.View.MyGridList
                android:id="@+id/time_grid"
                android:layout_width="@dimen/actionbar_heigh"
                android:layout_height="match_parent"
                android:background="@color/grid_bg"
                android:numColumns="1"
                android:scrollbars="none"
                android:verticalSpacing="1dp" />

            <com.clubank.View.MyGridList
                android:id="@+id/data_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/class_bg"
                android:horizontalSpacing="1dp"
                android:numColumns="7"
                android:scrollbars="none"
                android:verticalSpacing="1dp" />
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_db" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/active_button"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/solid_white_rectangle_" />

            <TextView
                style="@style/SmallGrayTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="未排" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/solid_blue_rectangle_" />

            <TextView
                style="@style/SmallGrayTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="选中" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/solid_orange_rectangle" />

            <TextView
                style="@style/SmallGrayTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="已约" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/solid_gray_rectangle_" />

            <TextView
                style="@style/SmallGrayTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="已过" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/solid_green_rectangle_" />

            <TextView
                style="@style/SmallGrayTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="可约" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_db" />

    <LinearLayout
        android:id="@+id/manage_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_heigh"
        android:background="@color/gray_db"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center"
            android:onClick="doWork"
            android:text="全选" />

        <Button
            android:id="@+id/btn_copy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.8"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center"
            android:onClick="doWork"
            android:text="复制上周" />

        <Button
            android:id="@+id/btn_pai"
            style="@style/ButtonStyleGray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:text="设为未安排" />

        <Button
            android:id="@+id/btn_yue"
            style="@style/ButtonStyleGray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="设为可预约" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_sure"
        style="@style/ButtonStyleGray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:enabled="false"
        android:text="确定时间"
        android:visibility="gone" />
</LinearLayout>